
<project basedir="." name="templateApp" default="build">
	
	<property name="src.dir" value="${basedir}/src"/>

	<path id="compile.classpath">
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</path>
	
	<path id="test.classpath">
			<pathelement location="${build.classes.dir}"/>
			<!-- configuration -->
			<pathelement location="${conf.dir}"/>
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</path>
	
	
	<target name="run" depends="build" description="Run the template application">
		<java classname="ee.ut.math.tvt.lovilouad.Intro" classpathref="test.classpath" fork="yes" />
	</target>

	<target name="build" description="Build the system">
			<mkdir dir="${build.dir}"/>
			<mkdir dir="${build.classes.dir}"/>
			<javac
	            srcdir="${src.dir}"
	            destdir="${build.classes.dir}"
	            debug="true"
	            debuglevel="lines,vars,source"
	            encoding="utf-8"
	            compiler="modern"
	            target="1.7"
	            source="1.7"
				includeantruntime="false">
				<classpath refid="compile.classpath"/>
			</javac>

		</target>
</project>